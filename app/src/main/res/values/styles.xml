<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="actionMenuTextColor">@color/toolbar_menu_item</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>
    </style>

    <style name="AppThemeBase.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="AppThemeBase.Menu">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/toolbar_menu_item</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="AppThemeBase.TextInputLayout.ErrorMessage" parent="@style/AppThemeBase.TextInputLayout.Dark">
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppThemeBase.TextInputLayout.Dark" parent="AppThemeBase">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppThemeBase.TextInputLayout.Light" parent="AppThemeBase">
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>
    </style>

</resources>
